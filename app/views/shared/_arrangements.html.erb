<%= simple_form_for @arrangement, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-inputs" style="background-color: white;">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <%= f.input :date, input_html: { class: 'form-control' } %>
        </div>
        <div class="col-md-6">
          <%= f.text_area :subject, class: "form-control col-12 mt-4", rows: 5 %><br>
        </div>
      </div>
    </div>
    <div class="mx-auto mt-4" style="width: 200px;">
      <%= f.button :submit, class: "btn btn-primary btn-block" %>
    </div>
  </div>
<% end %>
